<div class='row'>
  {{frost-text
    id=componentId
    value=value
    class=class
    type=type
    on-input=(action "onInput")
    disabled=disabled}}
  {{#if revealable}}
    {{#if isRevealerVisible}}
        {{#frost-button
          size='none'
          priority='none'
          on-click=(action "toggleReveal")}}
          {{frost-icon icon=revealIcon}}
        {{/frost-button}}
    {{/if}}
  {{/if}}
  {{#if isCapsAndReveal}}
    <div class="shifted-warning">Caps on</div>
  {{else if isCapsOn}}
    <div class='warning'>Caps on</div>
  {{/if}}
</div>
